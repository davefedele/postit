<%= render 'shared/content_title', title: @category.name %>

<% @category.posts.each do |post| %>
  <div class="row">
    <div class="span8 well">
      <%= render post.categories %>
      <h4><%= link_to post.title, post.url %></h4>
      <p> <%= post.description %></p>
      <p>
        <span class="quiet">posted by </span> <%= post.creator.username %> 
        <small> at <%= post.created_at %></small>
        <span>
       </p>
       <small>
       <span>   
          <%= link_to("#{post.comments.size} comments", post_path(post)) %>
        </span>
      </small>
      <br/>
      <%= link_to 'edit', edit_post_path(post) %>
    </div>
  </div>
<% end %>

<%= link_to 'edit category', edit_category_path(@category) %>
<br/>
<%= link_to 'return to all posts', posts_path %>